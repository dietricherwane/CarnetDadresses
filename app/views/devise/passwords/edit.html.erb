<div class="session_page_title_wrapper">
  <div class="container sixteen columns">  
    <div class="page_title_inner">
      <div class="pb_title_wrapper">
		       <h3 class="pb_title">Modifier votre mot de passe</h3><p class="session_sub_pb_title"><a style="color: #c90000;text-decoration:none;"> &nbsp; - &nbsp; Reinitialiser votre mot de passe </a> </p>
            <div class="clear"></div>            				 
          </div>
    </div>
  </div>
</div>

<%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put }) do |f| %>
  <%= devise_error_messages! %>
  <%= f.hidden_field :reset_password_token %>

  <div class="form-group">
    <%= f.password_field :password, :autofocus => true, class: "form-control", placeholder: "Veuillez entrer votre mot de passe" %>
  </div>

  <div class="form-group">
    <%= f.password_field :password_confirmation, class: "form-control", placeholder: "Veuillez confirmer votre mot de passe" %>
  </div>

  <div class="form-group">
    <%= f.submit "Changer le mot de passe" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
