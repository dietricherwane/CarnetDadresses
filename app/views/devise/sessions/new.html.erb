<div class="session_page_title_wrapper">
  <div class="container sixteen columns">  
    <div class="page_title_inner">
      <div class="pb_title_wrapper">
	      <h3 class="pb_title">
	        Connexion 
	      </h3>
	      <p class="session_sub_pb_title">
	        <a style="color: rgb(255, 150, 0);text-decoration:none;">
	          &nbsp; - &nbsp; Accédez à l'interface d'administration 
	        </a> 
	      </p>
        <div class="clear"></div>            				 
      </div>
    </div>
  </div>
</div>
<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
  <div class="form-group">  
    <%= f.email_field :email, :autofocus => true, class: field_class(resource, :email), placeholder: "Veuillez entrer votre email" %>   
  </div>

  <div class="form-group">
    <%= f.password_field :password, class: "form-control", placeholder: "Veuillez entrer votre mot de passe" %>
  </div>

  <%# if devise_mapping.rememberable? -%>
    <%#= f.check_box :remember_me %> <%#= f.label :remember_me %>
  <%# end -%>

  <div  class="form-group">
    <%= f.submit "Se connecter", class: "button" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
