<div class="session_page_title_wrapper">
  <div class="container sixteen columns">  
    <div class="page_title_inner">
      <div class="pb_title_wrapper">
		       <h3 class="pb_title">Instructions de confirmation? </h3><p class="session_sub_pb_title"><a style="color: #c90000;text-decoration:none;"> &nbsp; - &nbsp; Recevoir les instructions par mail </a> </p>
               <div class="clear"></div>           				 
          </div>
    </div>
  </div>
</div>

<%= form_for(resource, :as => resource_name, :url => confirmation_path(resource_name), :html => { :method => :post }) do |f| %>

  <div class="form-group">
    <%= f.email_field :email, :autofocus => true, class: "form-control", placeholder: "Veuillez entrer votre adresse email" %>
  </div>

  <div  class="form-group">
    <%= f.submit "Valider", class: "button" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
