<%= notification_messages! %>

<div class="page_title_wrapper">
  <div class="container sixteen columns">
    <div class="page_title_inner">
      <span class="main_t_1">
        Création et modification de l'Aide </span><span class="main_t_2">&nbsp; - &nbsp;  Créer ou modifier l'Aide du système
      </span>
    </div>
  </div><!-- End container sixteen columns -->
</div><!-- End page_title_wrapper -->

<div class="content_shadow"></div>
<div class="clear"></div>

<div class = "container">
  <div class = "content_wrapper_inner">

  <div class = "sixteen columns row">
    <div class = "one_half">

      <div class="pb_title_wrapper">
        <h3 class="pb_title1">Créer l'Aide</h3>
      </div>
      <%= form_for @help, url: create_help_path do |f| %>
        <div class="form-group">
          <label>
            Le type d'Aide
          </label>
          <br />
          <select name = "help_type" class="form-control">
            <option value = "website">L'Aide du site web</option>
            <option value = "wallet">L'Aide du wallet</option>
          </select>
        </div>
        <div class="form-group">
          <label>
            Le contenu de l'Aide
          </label>
          <textarea id = "content" class = "form-control" placeholder = "Veuillez entrer le contenu de l'Aide" name = "content">
          </textarea>
        </div>

        <div class="form-group">
          <%= f.submit "Valider" %>
        </div>
      <% end %>
    </div><!-- End one_half -->

    <div class = "one_half lastcolumn">
      <div class="pb_title_wrapper">
        <h3 class="pb_title1">Contenu de l'Aide</h3>
      </div>
      <div class="accordion-items">
        <% if !@helps.blank? %>
          <%= render "helps_list", :locals => {:helps => @helps} %>
        <% end %>
      </div>

    </div><!-- End one_half lastcolumn -->
  </div>

  </div><!-- End content_wrapper_inner -->
</div><!-- End container -->
