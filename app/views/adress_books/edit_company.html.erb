<%= notification_messages! %> 

<div class="page_title_wrapper">
  <div class="container sixteen columns">
    <div class="page_title_inner">	      			       	
      <span class="main_t_1"> 
        Modification des profils des Entreprises </span><span class="main_t_2">&nbsp; - &nbsp;  Modifier le profil de <%= @adress_book.company_full_name %> 
      </span>
    </div>			
  </div><!-- End container sixteen columns -->			
</div><!-- End page_title_wrapper -->

<div class="content_shadow"></div>
<div class="clear"></div>

<div class = "container">
  <div class = "content_wrapper_inner">
  
  <div class = "sixteen columns row">
    <div class = "one_half">
      
      <div class="pb_title_wrapper">
        <h3 class="pb_title1">Modifier le profil</h3>                                				   
      </div>
      <%= form_for @adress_book, url: update_company_path, method: :post do |f| %>      
        <%= address_book_messages! %>                          
        <div class="form-group">
          <%= f.label :company_name %>
          <%= f.text_field :company_name, :autofocus => true, class: "form-control", placeholder: "Veuillez entrer le nom de l'entreprise" %>
        </div>
        
        <div class="form-group">
          <%= f.label :company_shortcut %>
          <%= f.text_field :company_shortcut, class: "form-control", placeholder: "Veuillez entrer le sige de l'entreprise" %>
        </div>
        
        <div class="form-group">
          <%= f.label :social_status_id %>
          <%= f.collection_select :social_status_id, @social_statuses, :id, :name, options ={prompt: "-Veuillez choisir le type d'entreprise-"}, html_options = {class: "form-control"} %>
        </div>
        
        <div class="form-group">
          <%= f.label :trading_identifier %>
          <%= f.text_field :trading_identifier, class: "form-control", placeholder: "Veuillez entrer le registre de commerce" %>
        </div>
        
        <div class="form-group">
          <%= f.label :employees_amount %>
          <%= f.text_field :employees_amount, class: "form-control", placeholder: "Veuillez entrer le nombre d'employés" %>
        </div>
        
        <div class="form-group">
          <%= f.label :capital %>
          <%= f.text_field :capital, class: "form-control", placeholder: "Veuillez entrer le capital de l'entreprise" %>
        </div>
        
        <div class="form-group">
          <%= f.label :turnover %>
          <%= f.text_field :turnover, class: "form-control", placeholder: "Veuillez entrer le chiffre d'affaires" %>
        </div>
        
        <div class="form-group">
          <%= f.label :phone_number %>
          <%= f.text_field :phone_number, class: "form-control", placeholder: "Veuillez entrer le numéro de téléphone" %>
        </div>
        
        <div class="form-group">
          <%= f.label :fax %>
          <%= f.text_field :fax, class: "form-control", placeholder: "Veuillez entrer le numéro de fax" %>
        </div>
        
        <div class="form-group">
          <%= f.label :website %>
          <%= f.email_field :website, class: "form-control", placeholder: "Veuillez entrer le site web" %>
        </div>
        
        <div class="form-group">
          <%= f.label :email %>
          <%= f.email_field :email, class: "form-control", placeholder: "Veuillez entrer l'adresse email" %>
        </div>
        
        <div class="form-group">
          <%= f.label :country_id %>
          <%= f.collection_select :country_id, @countries, :id, :name, options ={prompt: "Veuillez choisir le pays", selected: (Country.find_by_name("Côte D'ivoire").id rescue nil)}, html_options = {class: "form-control"} %>
        </div>
        
        <div class="form-group">
          <%= f.label :city %>
          <%= f.text_field :city, class: "form-control", placeholder: "Veuillez entrer la ville" %>
        </div> 
        
        <div class="form-group">
          <%= f.label :geographical_address %>
          <%= f.text_field :geographical_address, class: "form-control", placeholder: "Veuillez entrer l'adresse géographique" %>
        </div> 
        
        <div class="form-group">
          <%= f.label :postal_address %>
          <%= f.text_field :postal_address, class: "form-control", placeholder: "Veuillez entrer l'adresse postale" %>
        </div>
        
        <div class="form-group">
          <%= f.label :sector_id %>
          <%= f.collection_select :sector_id, @sectors, :id, :name, options ={prompt: "-Veuillez choisir le secteur d'opération-"}, html_options = {class: "form-control"} %>
        </div>
        
        <div class="form-group">
          <%= f.label :sales_area_id %>
          <%= f.collection_select :sales_area_id, @sales_areas, :id, :name, options ={prompt: "-Veuillez choisir le domaine d'activité-"}, html_options = {class: "form-control"} %>
        </div>      
        
        <div class="form-group">
          <%= f.label :holding_id %>
          <%= f.collection_select :holding_id, @holdings, :id, :name, options ={prompt: "-Veuillez choisir le groupe-"}, html_options = {class: "form-control"} %>
        </div>  

        <div class="form-group">
          <%= f.label :activities %>
          <%= f.text_area :activities, class: "form-control", placeholder: "Veuillez détailler les activités" %>
        </div>             

        <div class="form-group">
          <%= f.submit "Valider" %>
        </div>
      <% end %>
    </div><!-- End one_half -->
    
    <div class = "one_half lastcolumn">
      <div class="pb_title_wrapper">
        <h3 class="pb_title1">Liste des Entreprises</h3>                                				   
      </div>
      
      <!-- Search form -->
      <%= render "search_company_form", :locals => {terms: @terms} %>      
      <!-- Search form -->      
      
      <div class="accordion-items">  
        <% unless @adress_books.blank? %>       
          <% @adress_books.each do |adress_book| %>
            <div class="accordion-item">    
              <%= render "companies_list", adress_book: adress_book %>
            </div>
          <% end %>
                                	
          <%= paginate @adress_books, :params => {:controller => :adress_books, :action => :companies} %>   
        <% end %>    
      </div>
			 
    </div><!-- End one_half lastcolumn -->
  </div>
  
  </div><!-- End content_wrapper_inner -->
</div><!-- End container -->
