<div class="accordion-item-header">
  <a href="#">
    <%= adress_book.full_name %>
    <%= render "status_icons", adress_book: adress_book %>
  </a>
</div>
<div class="accordion-item-body">
  <p>
    <b>Actions:</b>
    <a class = "form-action-link" href = "<%= edit_person_path(adress_book.id) %>">
      <img src = "/images/forms/edit.png" class = "form-action-image" title = "Modifier" />
    </a>
    <% if (can_enable rescue nil) %>
      <a class = "form-action-link" href = "<%= adress_book.published? ? disable_person_path(adress_book.id) : enable_person_path(adress_book.id) %>">
        <img src = "/images/forms/<%= adress_book.published? ? 'disable' : 'enable' %>.png" class = "form-action-image" title = "<%= adress_book.published? ? 'Désactiver' : 'Activer' %>" />
      </a>
    <% end %>
  </p>
  <p>
    <%= image_tag adress_book.avatar.url(:thumb) rescue nil %>
  </p>
  <p>
    <b><%= AdressBook.human_attribute_name("address_book_title_id") %>:</b> [<%= adress_book.address_book_title.address_book_title_category.name rescue nil %>] <%= adress_book.address_book_title.name rescue nil %>
  </p>
  <p>
    <b><%= AdressBook.human_attribute_name("civility_id") %>:</b> <%= adress_book.civility.name rescue nil %>
  </p>
  <p>
    <b><%= AdressBook.human_attribute_name("profile_id") %>:</b> <%= adress_book.profile.name %>
  </p>
  <p>
    <b><%= AdressBook.human_attribute_name("firstname") %>:</b> <%= adress_book.firstname %>
  </p>
  <p>
    <b><%= AdressBook.human_attribute_name("lastname") %>:</b> <%= adress_book.lastname %>
  </p>
  <p>
    <b><%= AdressBook.human_attribute_name("birthdate") %>:</b> <%= adress_book.birthdate.strftime("%d-%m-%Y") rescue nil %>
  </p>
  <p>
    <b><%= AdressBook.human_attribute_name("marital_status_id") %>:</b> <%= adress_book.marital_status.name rescue nil %>
  </p>
  <p>
    <b><%= AdressBook.human_attribute_name("childrens") %>:</b> <%= adress_book.childrens %>
  </p>
  <div class="border_divider"></div>
  <p>
    <b><%= AdressBook.human_attribute_name("company_id") %>:</b> <%= adress_book.company.name rescue nil %>
  </p>
  <p>
    <b><%= AdressBook.human_attribute_name("job_role") %>:</b> <%= adress_book.job_role %>
  </p>
  <p>
    <b><%= AdressBook.human_attribute_name("sector_id") %>:</b> <%= adress_book.sector.name %>
  </p>
  <div class="border_divider"></div>
  <p>
    <b><%= AdressBook.human_attribute_name("country_id") %>:</b> <%= adress_book.country.name rescue nil %>
  </p>
  <p>
    <b><%= AdressBook.human_attribute_name("city") %>:</b> <%= adress_book.city %>
  </p>
  <p>
    <b><%= AdressBook.human_attribute_name("geographical_address") %>:</b> <%= adress_book.geographical_address %>
  </p>
  <p>
    <b><%= AdressBook.human_attribute_name("postal_address") %>:</b> <%= adress_book.postal_address %>
  </p>
  <p>
    <b><%= AdressBook.human_attribute_name("phone_number") %>:</b> <%= adress_book.phone_number %>
  </p>
  <p>
    <b><%= AdressBook.human_attribute_name("email") %>:</b> <%= adress_book.email %>
  </p>
  <p>
    <b><%= AdressBook.human_attribute_name("comment") %>:</b> <%= simple_format(adress_book.comment) %>
  </p>
  <p>
    <b>Créé le:</b> <%= adress_book.created_at.strftime("%d-%m-%Y") + " à " + adress_book.created_at.strftime("%Hh %Mmn") %>
  </p>
  <div class="border_divider"></div>
  <p>
    <%= link_to "Hobby - Formations - Expériences - Fonction", complete_person_profile_path(adress_book.id) %>
  </p>
</div>
